<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="top"-->
        <!--android:id="@+id/cityBgImage" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/cardview_dark_background"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/colorAccent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cityName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_medium"
                    tools:text="helllo" />

                <TextView
                    android:id="@+id/cityTemp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="12°"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_big" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/cityIconMaxTemp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="@string/arrow_up_long"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorMaxTemp"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/cityMaxTemp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="7°"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/cityIconMinTemp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="@string/arrow_down_long"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorMinTemp"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/cityMinTemp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-thin"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="8°"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/text_small" />

                </LinearLayout>


                <TextView
                    android:id="@+id/cityDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingBottom="@dimen/margin_medium"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorViolet"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/isCurrentCity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="@string/current_city"
                    android:textAlignment="center"
                    android:textColor="@color/colorOrange"
                    android:textStyle="italic"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/weather_icon_main"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.5"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorViolet"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="bottom"
                    android:text="last refreshed"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/last_refreshed"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/colorViolet"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"

            android:background="#ccc"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Later Today"
                android:textAlignment="textStart"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="5dp"
                android:background="@color/gray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/todayForecastRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:background="#ccc">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="5dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Future Forecast"
                android:textAlignment="textStart"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="5dp"
                android:background="@color/gray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/futureForecastRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="5dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Details"
                android:textAlignment="textStart"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="5dp"
                android:background="@color/gray" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryText"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:id="@+id/humidityIcon"
                android:text="@string/weather_humidity"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Humidity"
                android:textAlignment="textStart"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />


            <TextView
                android:id="@+id/humidityValue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Details1"
                android:textAlignment="center"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryText"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:id="@+id/pressureIcon"
                android:text="@string/weather_pressure"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Pressure"
                android:textAlignment="textStart"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/pressureValue"
                android:gravity="center"
                android:text="Details1"
                android:textAlignment="center"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryText"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:id="@+id/maxTempIcon"
                android:text="@string/weather_max_temp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Max Temp"
                android:textAlignment="textStart"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/maxTempValue"
                android:gravity="center"
                android:text="Details1"
                android:textAlignment="center"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryText"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:id="@+id/minTempIcon"
                android:text="@string/weather_min_temp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Min Temp"
                android:textAlignment="textStart"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/minTempValue"
                android:gravity="center"
                android:text="Details1"
                android:textAlignment="center"
                android:textColor="@color/colorViolet"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimaryText" />
    </LinearLayout>
</ScrollView>